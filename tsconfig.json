{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2016",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "inlineSourceMap": false,
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "baseUrl": ".",
        "lib": [
            "es7",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "bin",
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
